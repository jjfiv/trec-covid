<html>
    {% import 'macros.j2' as macros %}
    <head>
        <title>Index</title>
        {{macros.head()}}
    </head>
    <body>
        {{macros.nav(queries)}}
        <div class="container">
        <table class="table table-sm table-striped">
            <thead>
                <tr><th>QID</th><th>Query</th><th>Question</th><th>Narrative</th></tr>
            </thead>
        <tbody>
            {% for q in queries %}
                <tr>
                    <td><a href="{{url_for('search_results', qid=q.qid)}}">{{q.qid}}</a></td>
                    <td>{{q.query}}</td>
                    <td>{{q.question}}</td>
                    <td>{{q.narrative}}</td>
                </td>
            {% endfor %}
        </tbody>
        </table>
    </body>
    </div> {# container #}
</html>